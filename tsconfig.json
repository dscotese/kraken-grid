{
  "compilerOptions": {
    "allowJs": false,
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "outDir": ".",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./"]
  },
  
  "include": ["**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"],
  "files": ["global.d.ts"]
}