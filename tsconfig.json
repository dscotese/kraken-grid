{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "outDir": ".dist",
    "paths": {
      "*": ["*"]
    },
    "downlevelIteration": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
    "include": [
    "*.ts",
    "*.d.ts",
    "static/**/*.ts", 
    "unconverted.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".dist",
    "test",
    "**/*.test.ts",
    "TFC*",
    "TFCGem",
    "TFCGem/**/*",
    "JestTesting"
  ],
  "files": ["global.d.ts", "unconverted.d.ts"]
}