{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "outDir": ".dist",
    "paths": {
      "*": ["*", ".dist/*"]
    },
    "downlevelIteration": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types", "./"]
  },
  
  // "include": ["*.ts", "global.d.ts", "test/*.ts"],
  // "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "include": [
    "*.ts",
    "*.d.ts",
    "static/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts",
    "TFC*/"
  ],
  "files": ["global.d.ts"],
}