{
  "compilerOptions": {
    "allowJs": false,
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": ".",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./"],
    "sourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true
  },
  
  // "include": ["*.ts", "global.d.ts", "test/*.ts"],
  // "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "include": [
    "bot.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts"
  ],
  "files": ["global.d.ts"],
}